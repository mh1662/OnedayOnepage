<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/fragment_first_user_horizontal_margin"
    android:paddingLeft="@dimen/fragment_first_user_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/first_user3_text1_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/body_default"
        android:lineSpacingExtra="8sp"
        android:layout_marginTop="88dp"
        android:text="@string/first_user_layout3_text1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_user3_text1_info"
        android:textSize="28sp"
        android:textColor="@color/point"
        android:lineSpacingExtra="-6sp"
        android:layout_marginTop="4dp"
        android:text="@string/first_user_layout3_text2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <com.mh16629.onedayonepage.util.RoundImageView
            android:id="@+id/first_user_photo"
            android:src="@drawable/account_user_photo"
            android:layout_width="@dimen/first_user_photo_button_width"
            android:layout_height="@dimen/first_user_photo_button_height"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/first_user_photo_button"
            android:layout_width="@dimen/first_user_photo_icon_width"
            android:layout_height="@dimen/first_user_photo_icon_height"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/icon_camera"
            android:scaleType="fitCenter"
            android:layout_alignRight="@id/first_user_photo"
            android:layout_alignEnd="@id/first_user_photo" />

    </RelativeLayout>
</RelativeLayout>
