<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mh16629.onedayonepage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/activity_login"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.main.MainActivity"
            android:label="@string/activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.booksearch.BookSearchActivity"
            android:label="@string/activity_book_search"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.bookdetail.BookDetailActivity"
            android:label="@string/activity_book_detail"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.booknew.BookNewActivity"
            android:label="@string/activity_book_new"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.bookedit.BookEditActivity"
            android:label="@string/activity_book_edit"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.addnote.AddNoteActivity"
            android:label="@string/activity_add_note"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.library.LibraryActivity"
            android:label="@string/activity_library"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.calendar.CalendarActivity"
            android:label="@string/activity_calendar"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.mh16629.onedayonepage.mypage.MypageActivity"
            android:label="@string/activity_mypage"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>